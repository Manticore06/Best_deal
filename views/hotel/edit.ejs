<%- include('../base/header') -%>
<%- include('../base/navbar') -%>
<div class="container pr-5 pl-5">

<%- include('../base/messages') -%>
        
            <div class="row mb-4">
                    <div class="col-md-12" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                            <nav class="navbar navbar-expand-lg navbar-light">
                                    <ol class="navbar-nav">
                                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/hotel/all">Hotels</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                                    </ol>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                      <ul class="navbar-nav ml-auto">
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/hotel/all">All</a>
                                            </li>
                                        </ul>
                                    </div>
                              </nav>
                        </div>
                </div>
        
    <div class="row mb-4">
        <div class="col-md-12 p-4" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
            <form  action="/hotel/update" method="post">
              <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="nom">Nom</label>
                    <input type="text" name="nom" id="nom" class="form-control" value="<%= hotel.NomH%>" >
                </div>
                <div class="form-group col-md-4">
                    <label for="cateH">Category</label>
                    <select name="cateH" id="inputcity" class="form-control">
                        <% if(hotel.CateH == 1) { %>
                        <option value="1" selected>one star</option>
                        <option value="2">tow star</option>
                        <option value="3">three star</option>
                        <option value="4">four star</option>
                        <option value="5">five star</option>
                        <% } else if(hotel.CateH == 2) { %>
                        <option value="1">one star</option>
                        <option value="2" selected>tow star</option>
                        <option value="3">three star</option>
                        <option value="4">four star</option>
                        <option value="5">five star</option>
                        <% } else if(hotel.CateH == 3) { %>
                        <option value="1">one star</option>
                        <option value="2">tow star</option>
                        <option value="3" selected>three star</option>
                        <option value="4">four star</option>
                        <option value="5">five star</option>
                        <% } else if(hotel.CateH == 4) { %>
                        <option value="1">one star</option>
                        <option value="2">tow star</option>
                        <option value="3">three star</option>
                        <option value="4" selected>four star</option>
                        <option value="5">five star</option>
                        <% } else if(hotel.CateH == 5) { %>
                        <option value="1">one star</option>
                        <option value="2">tow star</option>
                        <option value="3">three star</option>
                        <option value="4">four star</option>
                        <option value="5" selected>five star</option>
                        <% } %>
                    </select>    
                </div>
                <div class="form-group col-md-4">
                    <label for="nbchdisp">Numbre chumbre disponible</label>
                    <input type="text" name="nbchdisp" id="nbchdisp" class="form-control" value="<%= hotel.NbChDisp%>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="adr">Address</label>
                    <input type="text" name="adr" id="adr" class="form-control" value="<%= hotel.AdrH%>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="tel">Telephone</label>
                    <input type="text" name="tel" id="tel" class="form-control" value="<%= hotel.TelH%>" >
                </div>
                <input type="hidden" name="id" value="<%=hotel.id%>">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary"> Update</button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>

</div>
</div>
</div>
