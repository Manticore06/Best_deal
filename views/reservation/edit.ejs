<%- include('../base/header') -%>
<%- include('../base/navbar') -%>
<div class="container pr-5 pl-5">

<%- include('../base/messages') -%>

            <div class="row mb-4">
                    <div class="col-md-12" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                            <nav class="navbar navbar-expand-lg navbar-light">
                                    <ol class="navbar-nav">
                                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/reservation/all">Reservation</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                                    </ol>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                      <ul class="navbar-nav ml-auto">
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/reservation/all">All</a>
                                            </li>
                                        </ul>
                                    </div>
                              </nav>
                        </div>
                </div>

    <div class="row mb-4">
            <div class="col-md-12 p-4" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                <form  action="/reservation/update" method="post">
                  <div class="form-row">
                <div class="form-group col-md-6">
                        <label for="type">Hotel</label>
                        <select name="hotelID" class="form-control">
                        <% hotel.forEach((hotel)=> {%>
                            <% if(hotel._id == reservation.NumCl) {%>
                            <option value="<%= hotel._id%>" selected><%= hotel.NomH%></option>
                            <% } else { %>
                            <option value="<%= hotel._id%>"><%= hotel.NomH%></option>
                            <% } %>
                        <%})%>
                        </select>
                </div>
                <div class="form-group col-md-6">
                        <label for="type">customer</label>
                        <select name="customerID" class="form-control">
                        <% customer.forEach((customer)=> {%>
                            <% if(customer._id == reservation.NumCu) {%>
                            <option value="<%= customer._id%>" selected><%= customer.Email%></option>
                            <% } else { %>
                            <option value="<%= customer._id%>"><%= customer.Email%></option>
                            <% } %>
                        <%})%>
                        </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="DateBegin">Date Begin</label>
                    <input type="date" name="DateBegin" id="DateBegin" class="form-control" value="<%= reservation.DateDebRes%>">
                </div>
                <div class="form-group col-md-6">
                    <label for="DateEnd">Date End</label>
                    <input type="date" name="DateEnd" id="DateEnd" class="form-control" value="<%= reservation.DateFinRes%>">
                </div>
                <input type="hidden" name="id" value="<%=reservation.id%>">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"> Update</button>
                </div>
            </form>
        </div>
    </div>
</div>    

</div>
</div>
</div>
<%- include('../base/footer') -%>